{
  "name": "envshield",
  "displayName": "EnvShield – Stream-Safe .env Masking",
  "description": "Masks values in .env* files inside the editor using decorations (visual only). Toggleable with a command, with whitelist support.",
  "version": "0.0.1",
  "publisher": "markpython86",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dotenv"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "envShield.toggle",
        "title": "EnvShield: Toggle Masking"
      }
    ],
    "configuration": {
      "title": "EnvShield",
      "properties": {
        "envShield.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Master enable/disable for EnvShield"
        },
        "envShield.maskOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Apply mask on activation"
        },
        "envShield.maskChar": {
          "type": "string",
          "default": "•",
          "description": "Character to use for masking (only first character is used if multiple)"
        },
        "envShield.whitelistKeys": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["NODE_ENV"],
          "description": "Environment variable keys that should not be masked"
        },
        "envShield.extraFileGlobs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional file globs to apply masking to"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/markpython86/envshield"
  }
}